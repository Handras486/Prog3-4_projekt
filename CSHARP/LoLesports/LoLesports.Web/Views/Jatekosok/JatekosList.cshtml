@model IEnumerable<LoLesports.Web.Models.Jatekos>
@{
    ViewBag.Title = "JatekosList";
}

<h2>JatekosList</h2>

if (Model.Count() == 0)
{
<p>Nincs adat az adatbázisban!</p>
}
else
{
<table border="1">
    <tr>
        <th>@Html.DisplayNameFor(m => m.First().Felhasznalonev)</th>
        <th>Datasheet</th>
        <th>Delete</th>
        <th>Edit</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(m => item.Felhasznalonev)</td>
            <td>@Html.DisplayFor(m => item.Vezeteknev)</td>
            <td>@Html.DisplayFor(m => item.Keresztnev)</td>
            <td>@Html.DisplayFor(m => item.Eletkor)</td>
            <td>@Html.DisplayFor(m => item.Pozicio)</td>
            <td>@Html.DisplayFor(m => item.Nemzetiseg)</td>
            <td>@Html.DisplayFor(m => item.Csapatnev)</td>
            <td>@Html.ActionLink("[SHOW]", "Details", new { id = item.Felhasznalonev })</td>
            <td>@Html.ActionLink("[DEL]", "Remove", new { id = item.Felhasznalonev })</td>
            <td>@Html.ActionLink("[EDIT]", "Edit", new { id = item.Felhasznalonev })</td>
        </tr>
    }
</table>
}

